<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear_liked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_liked"
        android:layout_marginLeft="8px"
        android:layout_marginTop="5px"
        android:layout_marginRight="8px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_liked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品姓名"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_booth_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="摊位号"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <LinearLayout
            android:id="@+id/Linear_evaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="17px"
                android:layout_height="15px"
                android:background="@mipmap/ic_star_un"
                />

            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="17px"
                android:layout_height="15px"
                android:background="@mipmap/ic_star_un"
                android:layout_marginLeft="3px"
                />

            <ImageView
                android:id="@+id/iv_third"
                android:layout_width="17px"
                android:layout_height="15px"
                android:background="@mipmap/ic_star_un"
                android:layout_marginLeft="3px"
                />

            <ImageView
                android:id="@+id/iv_fourth"
                android:layout_width="17px"
                android:layout_height="15px"
                android:background="@mipmap/ic_star_un"
                android:layout_marginLeft="3px"
                />

            <ImageView
                android:id="@+id/iv_fifth"
                android:layout_width="17px"
                android:layout_height="15px"
                android:background="@mipmap/ic_star_un"
                android:layout_marginLeft="3px"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_complaint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="有无投诉"
            android:textColor="@color/white"
            android:textSize="8sp" />

    </LinearLayout>


</LinearLayout>